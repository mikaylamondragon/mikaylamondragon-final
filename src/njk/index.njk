{% extends '_templates/base.njk' %}

{% block page_title %}Visit Austin | Home{% endblock %}

{% block page_description %}The index search description for this page goes here.{% endblock %}

{% block content %}
<div class="container">
  <h1>Howdy, Partner!</h1>
  <p>Description of the website goe here. NEED TO WRITE THIS LATER!!!!!!!!</p>
  <div class = "row">
    <div class="col-sm-12 col-lg-6">
      <h2> Landmarks</h2>
        <div id = "carouselExampleControls" class=" carousel slide" data-ride="carousel" style="width: 30rem;">
          <div class="carousel-inner">
            <!-- for loop first part is file, second is array -->
            {% for landmark in landmarks.landmarks %}
            <div class="carousel-item {% if loop.first %}active{% endif %}">
              <a href = "landmarks/{{landmark.slug}}.html">
                <img src="img/landmarks/{{landmark.image}}" class="d-block w-100" alt="...">
              </a>
            </div>
            {% endfor %}
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
    </div>
  </div>
  <div class="col-sm-12 col-lg-6">
  <h2> Restaurants</h2>
    <div class="col">
      <img src="../img/landmarks/lady-bird-lake.jpg" class = "img-fluid" alt="lake">
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
      </div>
    </div>
  </div>
</div>
{% endblock %}